<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acMeals">

    <TextView
        android:id="@+id/tvBreakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/meals_label03"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textIsSelectable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnBreakfast"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meals_label03"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textIsSelectable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/labelTotal"
        app:layout_constraintEnd_toEndOf="@+id/tvSnack3" />

    <TextView
        android:id="@+id/tvSnack3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meals_label03"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textIsSelectable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSnack3"
        app:layout_constraintEnd_toEndOf="@+id/tvDinner" />

    <TextView
        android:id="@+id/tvDinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meals_label03"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textIsSelectable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDinner"
        app:layout_constraintEnd_toEndOf="@+id/tvSnack2" />

    <TextView
        android:id="@+id/tvSnack1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meals_label03"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textIsSelectable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSnack1"
        app:layout_constraintEnd_toEndOf="@+id/tvBreakfast" />

    <TextView
        android:id="@+id/tvSnack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meals_label03"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textIsSelectable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSnack2"
        app:layout_constraintEnd_toEndOf="@+id/tvLunch" />

    <Button
        android:id="@+id/btnSnack2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:onClick="btnSnack2"
        android:text="@string/meals_button04"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/btnLunch"
        app:layout_constraintTop_toBottomOf="@+id/btnLunch" />

    <Button
        android:id="@+id/btnSnack3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:onClick="btnSnack3"
        android:text="@string/meals_button06"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/btnDinner"
        app:layout_constraintTop_toBottomOf="@+id/btnDinner" />

    <Button
        android:id="@+id/btnDinner"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:onClick="btnDinner"
        android:text="@string/meals_button05"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/btnSnack2"
        app:layout_constraintTop_toBottomOf="@+id/btnSnack2" />

    <Button
        android:id="@+id/btnSnack1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:onClick="btnSnack1"
        android:text="@string/meals_button02"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/btnBreakfast"
        app:layout_constraintTop_toBottomOf="@+id/btnBreakfast" />

    <Button
        android:id="@+id/btnBreakfast"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:onClick="btnBreakfast"
        android:text="@string/meals_button01"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/tvDate"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <Button
        android:id="@+id/btnLunch"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:onClick="btnLunch"
        android:text="@string/meals_button03"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/btnSnack1"
        app:layout_constraintTop_toBottomOf="@+id/btnSnack1" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="@string/meals_label01"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelTotal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/meals_label02"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/btnSnack3"
        app:layout_constraintTop_toBottomOf="@+id/btnSnack3" />

    <TextView
        android:id="@+id/tvLunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meals_label03"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textIsSelectable="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnLunch"
        app:layout_constraintEnd_toEndOf="@+id/tvSnack1" />

    <Button
        android:id="@+id/btnGetAnotherDay"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:onClick="getAnotherDay"
        android:text="@string/meals_button07"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>